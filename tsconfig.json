{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": false,
    "jsx": "react",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "module": "es2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es5",
    "resolveJsonModule": true,
    "maxNodeModuleJsDepth": 5,
  },
  "include": [
    "packages/*",
    "packages/**/*",
    "examples"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.d.ts",
    "packages/core/types"
  ]
}
